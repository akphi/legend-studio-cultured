{
  "name": "legend-studio",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean && npm-run-all build:ts build:sass",
    "build:sass": "node ./scripts/workflow/buildSassAll.js --compressed",
    "build:ts": "tsc --build tsconfig.build.json",
    "check:format": "prettier --list-different \"(scripts|docs)/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\" \"packages/*/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\" && yarn sort-package-json --check \"package.json\" \"packages/*/package.json\"",
    "check:ts": "tsc --build && node ./scripts/workflow/checkProjectReferenceConfigs.js",
    "check:update": "yarn upgrade-interactive",
    "clean": "rimraf \"build\" \"@(fixtures|packages)/**/@(lib|dist|build)\"",
    "clean:cache": "rimraf \"build\" \"@(fixtures|packages)/**/build\" && yarn jest --clearCache",
    "dev": "yarn dev:studio",
    "dev:sass": "node ./scripts/workflow/buildSassAll.js --watch",
    "dev:studio": "yarn workspace app dev",
    "dev:ts": "tsc --build --watch",
    "start": "yarn dev"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "resolutions": {
    "@finos/babel-preset-legend-studio": "portal:../studio/packages/babel-preset",
    "@finos/eslint-plugin-legend-studio": "portal:../studio/packages/eslint-plugin",
    "@finos/legend-dev-utils": "portal:../studio/packages/legend-dev-utils",
    "@finos/legend-shared": "portal:../studio/packages/legend-shared",
    "@finos/legend-art": "portal:../studio/packages/legend-art",
    "@finos/legend-graph": "portal:../studio/packages/legend-graph",
    "@finos/legend-storage": "portal:../studio/packages/legend-storage",
    "@finos/legend-server-depot": "portal:../studio/packages/legend-server-depot",
    "@finos/legend-server-sdlc": "portal:../studio/packages/legend-server-sdlc",
    "@finos/legend-application": "portal:../studio/packages/legend-application",
    "@finos/legend-application-query": "portal:../studio/packages/legend-application-query",
    "@finos/legend-application-studio": "portal:../studio/packages/legend-application-studio",
    "@finos/legend-application-studio-bootstrap": "portal:../studio/packages/legend-application-studio-bootstrap",
    "@finos/legend-extension-dsl-persistence-cloud": "portal:../studio/packages/legend-extension-dsl-persistence-cloud",
    "@finos/legend-extension-dsl-persistence": "portal:../studio/packages/legend-extension-dsl-persistence",
    "@finos/legend-extension-dsl-diagram": "portal:../studio/packages/legend-extension-dsl-diagram",
    "@finos/legend-extension-dsl-data-space": "portal:../studio/packages/legend-extension-dsl-data-space",
    "@finos/legend-extension-dsl-text": "portal:../studio/packages/legend-extension-dsl-text",
    "@finos/legend-extension-external-format-json-schema": "portal:../studio/packages/legend-extension-external-format-json-schema",
    "@finos/legend-extension-external-language-morphir": "portal:../studio/packages/legend-extension-external-language-morphir",
    "@finos/legend-extension-external-store-service": "portal:../studio/packages/legend-extension-external-store-service",
    "@finos/legend-extension-application-studio-query-builder": "portal:../studio/packages/legend-extension-application-studio-query-builder"
  },
  "devDependencies": {
    "@babel/core": "7.18.13",
    "@finos/babel-preset-legend-studio": "workspace:*",
    "@finos/eslint-plugin-legend-studio": "workspace:*",
    "@finos/legend-dev-utils": "workspace:*",
    "@types/node": "18.7.13",
    "chalk": "5.0.1",
    "cross-env": "7.0.3",
    "eslint": "8.23.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "sass": "1.54.6",
    "typescript": "4.8.2"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=16.13.0",
    "yarn": ">=1.22.10"
  }
}
